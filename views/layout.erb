<!doctype html>
<html class="no-js" lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Six Degrees of Mark Wahlberg</title>
  <link rel="stylesheet" href="/foundation.css" />
  <script src="js/vendor/modernizr.js"></script>
</head>
<body>

  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
        <h1><a href="/">Six Degrees of Mark Wahlberg</a></h1>
      </li>
    </ul>
  </nav>

  <div class='main'>
    <div class="row">
      <!-- Search -->
      <form action="/search" method="get">
        <div class="columns small-12 medium-12 large-8">
          <label for="input">Actor Search</label>
          <input type="text" id="input" name="input">
        </div>
        <div class="columns small-6 medium-6 large-4">
          <input type="submit" class="expand button success radius" value="Search"/>
        </div>
      </form>
      <!-- Results -->
      <div class="columns small-12">
        <div class="panel">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>



  <script src="/js/vendor/jquery.js"></script>
  <script src="/js/foundation.min.js"></script>
  <script>
    $(document).foundation();
  </script>
</body>
</html>
